<%= stylesheet_link_tag "books", :media => "all" %>
<div class="timer">
  <h3><p id="RealtimeClockArea2"></p></h3>
</div>

<div class="left">
  <p>表示 : <%= @books.count %> records</p>
  <%= form_tag(books_path, method: "get") do %>
    題名 : <%= button_tag fa_icon("search"), :name => nil, class: "btn btn-primary" %><%= search_field_tag "query", params["query"] %>
    <%= submit_tag "検索" %>
  <% end %>
</div>
<br />
<div class="left">
  <h1>書籍</h1>
</div>
<br />
<div class="left">
<table width="85%">

  <thead>
  <tr>
    <th align="left">国 際 標 準 図 書 番 号</th>
    <th align="left">題 名</th>
    <th align="left">価 格 (¥)</th>
    <th align="left">著 者</th>
    <th align="left">出 版 日</th>
    <th align="left">購 入</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="list-group">
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publish %></td>
        <td><%= book.published %></td>
        <td><%= book.cd %></td>
        <td><%= link_to '閲覧', book, class: "btn btn-primary" %></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-primary" %></td>
        <td><%= link_to '削除', book, method: :delete, data: {confirm: '登録した書籍情報を削除しますか？'}, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </div>
  </tbody>
</table>
</div>
<div class="left">
  <%= paginate @books %>
</div>
<br/>
<br/>
<br/>
<div class="left">
  | <%= link_to '新規追加', new_book_path, class: "btn btn-primary" %> |  <%= link_to "CSV(SJIS形式)", books_path(format: :csv), class: "btn btn-primary" %> | <%= link_to '管理画面' , rails_admin_path, class: "btn btn-primary" %> | <% if user_signed_in? %><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary"%><% end %> |
</div>
<br/>
