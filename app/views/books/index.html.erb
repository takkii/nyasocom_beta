<div class="right">
  <%= link_to 'トップページ', root_path, class: "btn btn-primary" %> <%= link_to '新規追加', new_book_path, class: "btn btn-primary" %>  <%= link_to "CSV (SJIS)", books_path(format: :csv), class: "btn btn-primary" %> <%= link_to '管理画面', rails_admin_path, class: "btn btn-primary" %>
  <% if user_signed_in? %><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="silver">
  <%= image_tag 'logo.png', :size => "105x105", skip_pipeline: true %>
</div>

<div class="pythonista">
  <%= image_tag 'python.png', :size => "105x105", skip_pipeline: true %>
</div>

<div class="pyruby">
  <%= image_tag 'python_ruby.png', :size => "105x105", skip_pipeline: true %>
</div>

<div class="zukkii">
  <%= image_tag 'hozuki.png', :size => "105x105", skip_pipeline: true %>
</div>

<div class="sponsor">
  <iframe src="https://github.com/sponsors/takkii/card" title="Sponsor takkii" height="225" width="600" style="border: 0;"></iframe>
</div>

<div class="shelf">
  <h1>Web Library System 「鬼灯」</h1>
</div>
<div class="timer">
  <h3><p id="RealtimeClockArea2"></p></h3>
</div>

<div class="left_search">
  <ul><%= form_tag(books_path, method: "get") do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索', :name => nil %>
  <% end %>
</div>

<br />

<div class="left">
<h1>書籍</h1>
</div>

<br/>

<div class="left">
<table width="85%">

  <thead>

  <tr>
    <th>国際標準図書番号</th>
    <th>題 名</th>
    <th>
      <div align="center">価 格</div>
    </th>
    <th>著 者</th>
    <th>出 版 日</th>
    <th>写 真</th>
    <th>購 入</th>
    <th>状 態</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="attach">
    <div class="list-group">
      <% @books.each do |book| %>
        <tr>
          <td>
            <% if book.isbn.present? %>
              <%= book.isbn %>
            <% else %>
              国際標準図書番号はありません
            <% end %>
          </td>
          <td>
            <% if book.title.present? %>
              <%= book.title %>
            <% else %>
              題名はありません
            <% end %>
          </td>
          <td>
            <div align="center">
              <% if book.price.present? %>
                <%= (book.price).to_s(:delimited) + "円" + " + 税(10%)" %>
              <% else %>
                価格 (¥)はありません
              <% end %>
            </div>
          </td>
          <td>
            <% if book.publish.present? %>
              <%= book.publish %>
            <% else %>
              著者はありません
            <% end %>
          </td>
          <td>
            <% if book.published.present? %>
              <%= book.published %>
            <% else %>
              出版日はありません
            <% end %>
          </td>
          <td>
            <% if book.picture.present? %>
              <%= book.picture %>
            <% else %>
              写真はありません
            <% end %>
          </td>
          <td>
            <% if book.cd.present? %>
              購入後
            <% else %>
              購入はありません
            <% end %>
          </td>
          <td>
            <% if book.status.present? %>
              <%= book.status %>
            <% else %>
              本はありません
            <% end %>
          </td>
          <td>
            <div align="right"><%= link_to '閲覧', book, class: "btn btn-primary" %></div>
          </td>
          <td>
            <div align="center"><%= link_to '編集', edit_book_path(book), class: "btn btn-primary" %></div>
          </td>
          <td>
            <div align="left"><%= link_to '削除', book, method: :delete, data: { confirm: '登録した書籍情報を削除しますか？' }, class: "btn btn-primary" %></div>
          </td>
        </tr>
      <% end %>
    </div>
  </div>
  </tbody>
</table>
</div>
</ul>
</div>
<br/>

<div class="left">
  <%= paginate @bookes %>
</div>

