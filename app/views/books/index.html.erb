<h3><p id="RealtimeClockArea2"></p></h3>

<p id="notice"><%= notice %></p>

<p><%= @books.count %> records</p>
<%= form_tag(books_path, method: "get") do %>
  <%= button_tag fa_icon("search"), :name => nil, class: "btn btn-primary" %><%= search_field_tag "query", params["query"] %>
  <%= submit_tag "検索" %>
<% end %>

<h1>書籍</h1>

<table>
  <thead>
    <tr>

      <th>国際標準図書番号</th>
      <th>題名</th>
      <th>価格</th>
      <th>著者</th>
      <th>出版日</th>
      <th>購入</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publish %></td>
        <td><%= book.published %></td>
        <td><%= book.cd %></td>

        <td><%= link_to '閲覧', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'それでいいの？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
<%= link_to '新規追加', new_book_path %>
