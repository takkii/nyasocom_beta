<div style="padding-left: 10%;">
  <h3><p id="RealtimeClockArea2"></p></h3>
</div>

<p id="notice"><%= notice %></p>

<div style="padding-left: 10%;">
  <p>表示 : <%= @books.count %> records</p>
  <p>「 題名を検索 」</p>
  <%= form_tag(books_path, method: "get") do %>
    <%= button_tag fa_icon("search"), :name => nil, class: "btn btn-primary" %><%= search_field_tag "query", params["query"] %>
    <%= submit_tag "検索" %>
  <% end %>
</div>

<div style="padding-left: 10%;">
  <h1>書籍</h1>
</div>

<table width="85%" style="padding-left: 10%;">

  <thead>
  <tr>
    <th align="left">国際標準図書番号</th>
    <th align="left">題名</th>
    <th align="left">価格</th>
    <th align="left">著者</th>
    <th align="left">出版日</th>
    <th align="left">購入</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <div class="list-group">
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publish %></td>
        <td><%= book.published %></td>
        <td><%= book.cd %></td>
        <td><%= link_to '閲覧', book, class: "btn btn-primary" %></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-primary" %></td>
        <td><%= link_to '削除', book, method: :delete, data: {confirm: '登録した書籍情報を削除しますか？'}, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </div>
  </tbody>
</table>

<div style="padding-left: 10%;">
  <%= paginate @books %>
</div>
<br/>
<br/>
<br/>
<div style="padding-left: 10%;">
  <%= link_to '新規追加', new_book_path, class: "btn btn-primary" %> <%= link_to "CSV", books_path(format: :csv), class: "btn btn-primary" %>
</div>
<br/>
