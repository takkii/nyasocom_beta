<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br/>
  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :publish %>
    <%= form.text_field :publish %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :published %>
    <%= form.date_field(
            :published,
            value: (form.object.published || Time.now.strftime("%Y-%m-%d")),
        ) %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :cd %>
    <%= form.check_box :cd %>
  </div>
  <br/>
  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :book_picture %>
  </div>
  <br/>
  <form>
    <div class="actions">
      <button type="submit" class="btn btn-primary">登録</button> <%= link_to '閲覧', @book, class: "btn btn-primary" %> <%= link_to '戻る', books_path, class: "btn btn-primary" %>
    </div>
  </form>
  <br/>
<% end %>